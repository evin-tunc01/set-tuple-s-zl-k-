# Set oluşturma
set1 = {1, 2, 3, 4}
set2 = {3, 4, 5, 6}

# Set birleştirme
union_set = set1 | set2

# Set kesişimi
intersection_set = set1 & set2

# Set farkı
difference_set = set1 - set2

# Set elemanları
print(f"Birleşim: {union_set}")
print(f"Kesişim: {intersection_set}")
print(f"Fark: {difference_set}")

# Set'e eleman ekleme
set1.add(7)

# Set'ten eleman çıkarma
set1.remove(2)

print(f"Set1: {set1}")
